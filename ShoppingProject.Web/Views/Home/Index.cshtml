}

@if (Model.Slider.Count > 0)
{
    <div class="slider">
        <div class="landing-slider owl-carousel owl-theme">
            @foreach (var item in Model.Slider)
            {
                <div class="item">
                    <div class="img-effect">
                        <a href="@(string.IsNullOrEmpty(item.Link)?"#":item.Link)" target="_blank">
                            <img src="@item.Image" />
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
}

